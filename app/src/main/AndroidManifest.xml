<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    
    <!-- For Claude Code CLI integration -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />
    
    <!-- For enhanced terminal features -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    
    <application
        android:name=".TermuxAIApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.TermuxAI"
        android:requestLegacyExternalStorage="true"
        android:preserveLegacyExternalStorage="true"
        tools:targetApi="31">

        <!-- Main Terminal Activity with Tabs -->
        <activity
            android:name=".app.TabbedTerminalActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:theme="@style/Theme.TermuxAI.NoActionBar"
            android:windowSoftInputMode="adjustResize|stateVisible"
            android:configChanges="orientation|screenSize|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
            <!-- Support for opening files -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="file" />
            </intent-filter>
            
            <!-- Support for termux:// URLs -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="termux-ai" />
            </intent-filter>
        </activity>

        <!-- Settings Activity -->
        <activity
            android:name=".app.TermuxAISettingsActivity"
            android:exported="false"
            android:label="@string/settings_title"
            android:parentActivityName=".app.TabbedTerminalActivity" />

        <!-- Claude Code Setup Activity -->
        <activity
            android:name=".ai.ClaudeSetupActivity"
            android:exported="false"
            android:label="@string/claude_setup_title"
            android:parentActivityName=".app.TabbedTerminalActivity" />

        <!-- File Picker Activity -->
        <activity
            android:name=".ui.FilePickerActivity"
            android:exported="false"
            android:label="@string/file_picker_title"
            android:theme="@style/Theme.TermuxAI.Dialog" />

        <!-- Terminal Service for background operations -->
        <service
            android:name=".terminal.TermuxAIService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <!-- Claude Code Integration Service -->
        <service
            android:name=".ai.ClaudeCodeService"
            android:enabled="true"
            android:exported="false" />

        <!-- File Provider for sharing files -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- Receiver for system events -->
        <receiver
            android:name=".receivers.TermuxAIReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

    </application>

</manifest>