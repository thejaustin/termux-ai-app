<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp">

    <!-- Icon -->
    <ImageView
        android:id="@+id/onboarding_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="32dp"
        android:tint="@color/claude_accent"
        android:importantForAccessibility="yes"
        tools:src="@drawable/ic_terminal" />

    <!-- Title -->
    <TextView
        android:id="@+id/onboarding_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:textColor="@color/text_primary"
        android:textSize="24sp"
        android:textStyle="bold"
        android:importantForAccessibility="yes"
        tools:text="Welcome to Termux AI" />

    <!-- Description -->
    <TextView
        android:id="@+id/onboarding_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lineSpacingMultiplier="1.4"
        android:textColor="@color/text_secondary"
        android:textSize="16sp"
        android:importantForAccessibility="yes"
        tools:text="An AI-enhanced terminal for Android.\nOptimized for Claude Code." />

</LinearLayout>
