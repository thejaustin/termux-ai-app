<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/terminal_background"
    tools:context=".app.TabbedTerminalActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/terminal_background"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/terminal_tablayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tab_background"
            app:tabGravity="start"
            app:tabMode="scrollable"
            app:tabIndicatorColor="@color/claude_accent"
            app:tabSelectedTextColor="@color/claude_accent"
            app:tabTextColor="@color/tab_text_normal"
            app:tabRippleColor="@color/tab_ripple"
            app:tabMinWidth="120dp"
            app:tabMaxWidth="200dp" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main terminal content area -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/terminal_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <!-- Claude Code Status Overlay -->
    <LinearLayout
        android:id="@+id/claude_status_overlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="?attr/actionBarSize"
        android:background="@drawable/claude_status_background"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="gone"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ImageView
            android:id="@+id/claude_status_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_claude_thinking"
            android:tint="@color/claude_accent" />

        <TextView
            android:id="@+id/claude_status_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="Claude is thinking..."
            android:textColor="@color/claude_accent"
            android:textSize="14sp" />

        <ProgressBar
            android:id="@+id/claude_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:progressTint="@color/claude_accent" />

        <TextView
            android:id="@+id/claude_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:text="0%"
            android:textColor="@color/claude_accent"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Bottom panel for context and tools -->
    <LinearLayout
        android:id="@+id/bottom_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bottom_panel_background"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone">

        <!-- Quick actions bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btn_file_picker"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="4dp"
                android:background="@drawable/circle_button_background"
                android:src="@drawable/ic_folder"
                android:contentDescription="@string/file_picker_desc"
                android:tint="@color/icon_tint" />

            <ImageButton
                android:id="@+id/btn_voice_input"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="4dp"
                android:background="@drawable/circle_button_background"
                android:src="@drawable/ic_mic"
                android:contentDescription="@string/voice_input_desc"
                android:tint="@color/icon_tint" />

            <ImageButton
                android:id="@+id/btn_quick_commands"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="4dp"
                android:background="@drawable/circle_button_background"
                android:src="@drawable/ic_quick_commands"
                android:contentDescription="@string/quick_commands_desc"
                android:tint="@color/icon_tint" />

            <ImageButton
                android:id="@+id/btn_project_info"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="4dp"
                android:background="@drawable/circle_button_background"
                android:src="@drawable/ic_info"
                android:contentDescription="@string/project_info_desc"
                android:tint="@color/icon_tint" />

        </LinearLayout>

    </LinearLayout>

    <!-- Floating Action Buttons -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_new_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:layout_marginBottom="80dp"
        android:contentDescription="@string/new_tab_desc"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/fab_background"
        app:tint="@color/fab_icon" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_claude_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="16dp"
        android:layout_marginBottom="80dp"
        android:contentDescription="@string/claude_actions_desc"
        android:src="@drawable/ic_claude"
        android:visibility="gone"
        app:backgroundTint="@color/claude_accent"
        app:tint="@android:color/white" />

    <!-- Gesture hint overlay -->
    <TextView
        android:id="@+id/gesture_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="32dp"
        android:alpha="0.7"
        android:background="@drawable/hint_background"
        android:drawableTop="@drawable/ic_gesture_hint"
        android:drawablePadding="8dp"
        android:padding="16dp"
        android:text="@string/gesture_hint_text"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>