<?xml version="1.0" encoding="utf-8"?>
<!--
    Input Field Stroke Color State List
    
    Defines the border color states for input fields to provide visual
    feedback when focused. Aligns with Material Design guidelines while
    maintaining Termux's dark theme aesthetic.
-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:color="@color/input_border_focused" android:state_focused="true" />
    <item android:color="@color/input_border" />
</selector>